{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 750,
    "title": "Global Number of Vehicles by Fuel Type",
    "data": {
        "url": "data/VehiclesAndFuelTypeVehicleType_Filtered.csv"
    },
    "params": [
        {
            "name": "Fuel_type_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Petrol (excluding hybrids)",
                    "Diesel",
                    "Plug-in Hybrid petrol-electric"
                ],
                "labels": [
                    "Show All",
                    "Petrol (excluding hybrids)",
                    "Diesel",
                    "Plug-in hybrid petrol-electric"
                ],
                "name": "Choose a Fuel Type: "
            }
        }
    ],
    "vconcat": [
        {
            "width": 1310,
            "height": 600,
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "Year",
                    "type": "temporal",
                    "timeUnit": "year",
                    "title":"Year",
                    "axis": {
                        "title": ""
                    }
                },
                "y": {
                    "field": "Number of Vehicles",
                    "type": "quantitative",
                    "title": "Number of Vehicle"
                },
                "color":{
                    "field": "Fuel Type",
                    "type": "nominal",
                    "title": "Fuel Type",
                    "scale": {
                        "domain": [
                            "Petrol (excluding hybrids)",
                            "Plug-in Hybrid petrol-electric",
                            "Diesel"
                        ],
                        "range": [
                            "#d7191c",
                            "#2b83ba",
                            "#fdae61"
                        ]
                    }       
                },
                "tooltip": [
                    {"field":"Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
                    {"field":"Fuel Type", "type": "nominal"},
                    {"field": "Number of Vehicles", "type": "quantitative", "format":","}
                ],
                "order": { "field": "Fuel Type"}
            }
        },
        {
            "hconcat": [
                {
                    "title":"2015",
                    "mark": {
                        "type": "arc", "innerRadius": 50
                    },
                    "transform": [
                        {
                            "filter": {
                                "field": "Year",
                                "equal": "2016"
                            }
                        }
                    ],
                    "encoding": {
                        "theta": {
                            "field": "perc",
                            "type": "quantitative"
                        },
                        "color":{
                            "field": "Fuel Type",
                            "type": "nominal"
                        },
                        "tooltip" : [
                            {"field": "Fuel Type", "type": "nominal"},
                            {"field": "Number of Vehicles", "type": "quantitative"}
                        ]
                    }
                },
                {
                    "title":"2017",
                    "mark": {
                        "type": "arc", "innerRadius": 50
                    },
                    "transform": [
                        {
                            "filter": {
                                "field": "Year",
                                "equal": "2016"
                            }
                        }
                    ],
                    "encoding": {
                        "theta": {
                            "field": "perc",
                            "type": "quantitative"
                        },
                        "color":{
                            "field": "Fuel Type",
                            "type": "nominal"
                        },
                        "tooltip" : [
                            {"field": "Fuel Type", "type": "nominal"},
                            {"field": "Number of Vehicles", "type": "quantitative"}
                        ]
                    }
                },
                {
                    "title":"2018",
                    "mark": {
                        "type": "arc", "innerRadius": 50
                    },
                    "transform": [
                        {
                            "filter": {
                                "field": "Year",
                                "equal": "2017"
                            }
                        }
                    ],
                    "encoding": {
                        "theta": {
                            "field": "perc",
                            "type": "quantitative"
                        },
                        "color":{
                            "field": "Fuel Type",
                            "type": "nominal"
                        },
                        "tooltip" : [
                            {"field": "Fuel Type", "type": "nominal"},
                            {"field": "Number of Vehicles", "type": "quantitative"}
                        ]
                    }
                },
                {
                    "title":"2019",
                    "mark": {
                        "type": "arc", "innerRadius": 50
                    },
                    "transform": [
                        {
                            "filter": {
                                "field": "Year",
                                "equal": "2018"
                            }
                        }
                    ],
                    "encoding": {
                        "theta": {
                            "field": "perc",
                            "type": "quantitative"
                        },
                        "color":{
                            "field": "Fuel Type",
                            "type": "nominal"
                        },
                        "tooltip" : [
                            {"field": "Fuel Type", "type": "nominal"},
                            {"field": "Number of Vehicles", "type": "quantitative"}
                        ]
                    }
                },
                {
                    "title":"2020",
                    "mark": {
                        "type": "arc", "innerRadius": 50
                    },
                    "transform": [
                        {
                            "filter": {
                                "field": "Year",
                                "equal": "2019"
                            }
                        }
                    ],
                    "encoding": {
                        "theta": {
                            "field": "perc",
                            "type": "quantitative"
                        },
                        "color":{
                            "field": "Fuel Type",
                            "type": "nominal"
                        },
                        "tooltip" : [
                            {"field": "Fuel Type", "type": "nominal"},
                            {"field": "Number of Vehicles", "type": "quantitative"}
                        ]   
                    }
                },
                {
                    "title":"2015",
                    "mark": {
                        "type": "arc", "innerRadius": 50
                    },
                    "transform": [
                        {
                            "filter": {
                                "field": "Year",
                                "equal": "2020"
                            }
                        }
                    ],
                    "encoding": {
                        "theta": {
                            "field": "perc",
                            "type": "quantitative"
                        },
                        "color":{
                            "field": "Fuel Type",
                            "type": "nominal"
                        },
                        "tooltip" : [
                            {"field": "Fuel Type", "type": "nominal"},
                            {"field": "Number of Vehicles", "type": "quantitative"}
                        ]   
                    }
                }
            ]
        }
    ],
    "transform": [
        {"filter": "Fuel_type_selection == null || datum['Fuel Type'] == Fuel_type_selection"}
    ],
    "config": {
        "background": "antiquewhite"
    }
}
