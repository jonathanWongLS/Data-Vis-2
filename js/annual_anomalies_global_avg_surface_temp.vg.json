{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Annual Anomalies of Global Average Surface Temperature (Â°C)",
    "description": "Global anomalies are with respect to the 1991-2020 average",
    "width": 1000,
    "height":400,
    "data": {
        "url": "../data/annual_anomalies_global_avg_surface_temp.csv"
    },
    "params": [
        {
            "name": "Year_selection",
            "value": 1922,
            "bind": {
            "input": "range",
            "min": 1922,
            "max": 2021,
            "step": 1,
            "name": "From Year: "
            }
        }
    ],
    "transform": [{
            "filter": {
            "field": "Year",
            "timeUnit":"year",
            "gte": "Year_selection"
        }
    }],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Year", "type": "temporal", "timeUnit": "year",
            "axis": {
                "domain": false,
                "ticks": false,
                "labelAngle": 0,
                "labelPadding": 4
            }
        },
        "y": {
            "field": "Global", "type": "quantitative",
            "axis": {
                "gridColor": {
                    "condition": {"test":"datum.Global === 0", "value": "black"},
                    "value": "#ddd"
                }
            }
        },
        "color": { 
            "field": "Global",
            "type": "quantitative",
            "scale": {
                "range":"diverging",
                "domainMid": 0,
                "reverse":true
            } 
        },
        "tooltip" : [
            { "field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
            { "field" : "Global", "type": "quantitative", "title": "Global Average Anomaly Temperature"}
        ]
    },
    "config": {
        "background": "antiquewhite"
    }
}