{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Mean Annual Exposure to Fine Particulate PM2.5 (2017)",
    "width": 650,
    "height": 500,
    "data": {
      "url": "../js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "transform": [
          {
            "calculate": "'Data is not available for ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "../data/PM2.5_Global_Air_Pollution_2010-2017.csv"
              },
              "key": "Country Name",
              "fields": ["2017"]
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},        
        "encoding": {
          "color": {
            "field": "2017",
            "type": "quantitative",
            "scale": {
              "scheme": "reds"
            },
            "title":"Air Pollution Level (µg per ㎥)"
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "2017", "type": "quantitative", "format":".2f", "title":"Mean Annual Exposure to Fine Particulate PM2.5"}
          ]
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/countryInfo.csv"
              },
              "key": "name",
              "fields": ["latitude", "longitude"]
            }
          }
        ],
        "mark": {"type": "text", "font": "sans-serif"},
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "text": {"field": "properties.NAME", "type": "nominal"},
          "color":{"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['properties.NAME'] == 'India' ||  datum['properties.NAME'] == 'Saudi Arabia' || datum['properties.NAME'] == 'Niger'",
              "value": 1
            },
            "value": 0
          }
        }
    }
    ],
    "config": {
      "background":"antiquewhite"
    }
}